<div class="comment" id="comment-<%= comment.id %>">
  <span class="comment-author"><%= comment.user.name %></span> 
  <span class="comment-time"><%= time_ago_in_words(comment.created_at) %></span> 
  <span>
  	<%= link_to	"Ã—", task_comment_path(comment.task, comment), remote: true, method: :delete, class: "close", title: "Delete" %>
  </span>
  <div class="comment-text"><%= comment.content %></div>
  <% if comment.file? %>
  	<b>File:</b> <%= link_to comment.file.file.original_filename, comment.file.url %>
  <% end %>
</div>