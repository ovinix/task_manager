            <#%= f.text_field :content, placeholder: "Start typing here to create a task..", class: 'form-control' %>
            <span class="input-group-btn">
              <#%= button_tag "Add Task", type: "submit", class: 'btn btn-primary' %>
            </span>
          </p>
        <#% end %> -->
        <div class="comment">
          <span class="comment-author">ShvVolodymyr</span> <span class="comment-time">a few seconds ago</span>
          <div class="comment-text">first comment</div>
        </div>
        <div class="comment">
          <span class="comment-author">ShvVolodymyr</span> <span class="comment-time">a few seconds ago</span>
          <div class="comment-text">another comment</div>
        </div>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
        <%= f.submit "Close", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>