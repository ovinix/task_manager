<% if task.completed? %>
	<tr id="todo-item-<%= task.id %>">
		<td class="col-md-1 col-xs-1 text-center vert-align">
			<%= link_to complete_list_task_path(task.list, task), remote: true, method: :patch do %>
				<span class="glyphicon glyphicon-check" aria-hidden="true"></span>
			<% end %>
		</td>
		<td class="col-md-9 col-xs-9">
			<s><%= task.content %></s>
		</td>
		<td class="col-md-2 col-xs-2 text-center vert-align">
			<div class="hoverable">
				<%= link_to prioritize_list_task_path(task.list, task), remote: true, method: :patch, title: "Prioritize" do %>
					<span class="glyphicon glyphicon glyphicon-star-empty" aria-hidden="true"></span>
				<% end %> | 
				<%= link_to list_task_path(task.list, task), remote: true, 'data-toggle': "modal", 'data-target': '#modal-window', title: "Edit" do %>
					<span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
				<% end %> | 
				<%= link_to list_task_path(task.list, task), remote: true, method: :delete, title: "Delete" do %>
					<span class="glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span>
				<% end %>
			</div>
		</td>
	</tr>
<% else %>
	<tr id="todo-item-<%= task.id %>">
		<td class="col-md-1 col-xs-1 text-center vert-align">
			<%= link_to complete_list_task_path(task.list, task), remote: true, method: :patch do %>
				<span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
			<% end %>
		</td>
		<td class="col-md-9 col-xs-9">
			<% if task.important? %>
				<span class="star glyphicon glyphicon glyphicon-star" aria-hidden="true"></span>
			<% end %>			 
			<%= task.content %>
		</td>
		<td class="col-md-2 col-xs-2 text-center vert-align">
			<div class="hoverable">
				<%= link_to prioritize_list_task_path(task.list, task), remote: true, method: :patch, title: "Prioritize" do %>
					<span class="glyphicon glyphicon glyphicon-star-empty" aria-hidden="true"></span>
				<% end %> | 
				<%= link_to list_task_path(task.list, task), remote: true, 'data-toggle': "modal", 'data-target': '#modal-window', title: "Edit" do %>
					<span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
				<% end %> | 
				<%= link_to list_task_path(task.list, task), remote: true, method: :delete, title: "Delete" do %>
					<span class="glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span>
				<% end %>
			</div>
			<div class="visible visible-sm visible-md visible-lg">
				<% if task.has_deadline? %>
					<% if task.failed_deadline? %>
						<div class="task-failed-deadline">
					<% else %>
						<div class="task-deadline">
					<% end %>					
						<small>
							<span class="glyphicon glyphicon glyphicon-time" aria-hidden="true"></span> 
							<%= task.deadline_at.to_date %>
						</small>	 	
					</div>
				<% end %>
			</div>
			<div class="visible visible-xs">
				<% if task.has_deadline? %>
					<% if task.failed_deadline? %>
						<div class="task-failed-deadline">
					<% else %>
						<div class="task-deadline">
					<% end %>	
						<span class="glyphicon glyphicon glyphicon-time" aria-hidden="true"></span>	
					</div>
				<% end %>
			</div>		
		</td>
	</tr>	
<% end %>