<% if @project.errors.any? %>
	$("#modal-window").html("<%= escape_javascript(render 'projects/modal', project: @project, modal_title: 'Edit Project Title') %>");
<% else %>
	$("div#modal-window").modal('hide');
	$("div#project-<%= @project.id %>").replaceWith("<%= escape_javascript( render @project )%>");
<% end %>
