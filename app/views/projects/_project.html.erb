<div id="project-<%= project.id %>" class="panel panel-primary">
  <div class="panel-heading" data-toggle="collapse" data-target="#project-<%= project.id %>-todos">
    <div class="row">
      <div class="col-md-12">
        <div class="pull-left">
          <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span> 
          <%= project.title %>  
        </div>         
        <div class="pull-right">
          <%= link_to edit_project_path(project), remote: true, 'data-toggle': "modal", 'data-target': '#modal-window' do %>
            <span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %> |
          <%= link_to project, method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>                
        </div> 
      </div>        
    </div>
  </div>
  <div id="project-<%= project.id %>-todos" class="panel-collapse collapse in">
    <div class="panel-body">
      <%= render 'tasks/form', project: project, task: Task.new %>
    </div>
    <table class="table table-bordered">
      <tbody>
        <% if project.tasks.any? %>
          <%= render project.tasks %>
        <% else %>
          <tr class="text-center">
            <td>
              <h4><small>No TODOS for now.</small> </h4>         
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>        
</div>