<% if user_signed_in? %>
  <h1>Hello, <%= current_user.name %>! <small>(<%= current_user.email %>)</small> </h1>

  <div class="row jumbotron">
    <p id="notice"><%= notice %></p>

    <h1>Listing Projects</h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.user.name %></td>
            <td><%= project.title %></td>
            <td><%= link_to 'Show', project %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="center">
      <%= link_to new_project_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <strong>Add TODO List</strong>
      <% end %>
    </div>    
  </div>  
<% else %>
  <div class="center jumbotron">
    <h1>Welcom to Task Manager App</h1> 
    <h2>Created by Volodymyr Shvydkyi</h2>
    <%= link_to "Sing up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>  
<% end %>
